entrypoint = ".replit-init.sh"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
# Add auto-push to GitHub before deployment runs
run = ["bash", ".replit-init.sh"]
deploymentTarget = "autoscale"
ignorePorts = false

[run]
# Also run push+server locally
command = "bash .replit-init.sh"

[[ports]]
localPort = 3000
externalPort = 80
